#previewModal.modal.fade(tabindex='-1')
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal')
          span &times;
        h4 Preview
      .modal-body
        .panel.panel-default
          .panel-heading 
            h3.panel-title !{job.title}
          #modalContent.post-preview
            table.table.table-condensed
              if job.imgUrl
                tr
                  td(colspan='4', align='center')
                    img.img-responsive.img-thumbnail(src!=job.publishImgUrl, alt="Post Image")
              if job.description
                tr
                  td(colspan='4', align='left')
                    | !{job.descriptionDisplay}
              tr
                td(width='15%')
                  label.control-label Majikan
                td(width='35%')
                  | !{job.employer.name}
                td(width='15%')
                  label.control-label Hubungi
                td(width='35%')
                  | !{job.employer.contact}
              tr
                td
                  label.control-label Gaji
                td 
                  | !{job.salary}
                td
                  label.control-label Jenis Kerja
                td
                  | !{job.empTypeDisplay}
              tr
                td
                  label.control-label Tempat Kerja
                td 
                  | !{job.locationDisplay}
                td
                  label.control-label Bahasa
                td
                  | !{job.languageDisplay}
              if job.closing
                tr
                  td(colspan='4', align='center') 
                    strong Tarikh Tutup: !{job.closing}
              if job.otherInfoDisplay
                tr
                  td(colspan='4', align='left') !{job.otherInfoDisplay}
          .panel-footer
      .modal-footer
        button.btn.btn-default(type='button', data-dismiss='modal') Close
